    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "rollup": "^2.45.2",
    "standard-version": "^9.2.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
