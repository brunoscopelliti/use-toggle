  "bugs": {
    "url": "https://github.com/brunoscopelliti/use-toggle/issues"
  },
  "homepage": "https://github.com/brunoscopelliti/use-toggle#readme",
  "devDependencies": {
    "@babel/preset-env": "^7.13.15",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
